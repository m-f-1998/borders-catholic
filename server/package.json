{
  "name": "borders-catholic-server",
  "version": "1.0.0",
  "description": "Server for Borders Catholic website",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "prestart": "npm i",
    "start": "node --env-file=.env --watch ./ index.js",
    "dev": "npm run prestart && npx --yes nodemon -e ts --exec \"tsc && node ./dist/index.js\"",
    "lint": "npx --yes eslint",
    "lint:fix": "npx --yes eslint --fix",
    "tsc-verify": "npx --yes tsc --noEmit"
  },
  "dependencies": {
    "@fastify/compress": "^8.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.4",
    "body-parser": "^2.2.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "googleapis": "^171.4.0",
    "mime": "^4.1.0",
    "pino-pretty": "^13.1.3",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.9.0",
    "@types/node": "^25.3.0",
    "eslint-plugin-import": "^2.32.0",
    "typescript-eslint": "^8.56.0"
  },
  "volta": {
    "node": "24.13.1"
  }
}
